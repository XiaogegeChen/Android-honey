<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <com.github.xiaogegechen.design.viewgroup.TitleBar
                    android:id="@+id/common_activity_test_title_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:left_visibility="true"
                    app:right_visibility="false"
                    app:title_bar_title="Debug Activity"/>
            <TextView
                    android:id="@+id/common_activity_test_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/design_margin_left"
                    android:layout_marginEnd="@dimen/design_margin_right"
                    android:layout_marginTop="@dimen/design_margin_top"
                    android:textSize="@dimen/design_sub_title"
                    android:textColor="@color/design_color_accent"
                    tools:text="hello world"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>