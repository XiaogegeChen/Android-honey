<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        android:fitsSystemWindows="true"
        tools:ignore="ContentDescription" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f6f5f9"
            android:textSize="@dimen/design_main_title"
            android:layout_gravity="center_horizontal"
            android:text="@string/module_b_detail_title"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/design_margin_top"
            android:layout_marginStart="@dimen/design_margin_left"
            android:layout_marginEnd="@dimen/design_margin_right">
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/module_b_activity_constellation_detail_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/module_b_activity_constellation_detail_frame_layout"
                    android:layout_marginTop="-30dp"/>
            <FrameLayout
                    android:id="@+id/module_b_activity_constellation_detail_frame_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:id="@+id/module_b_activity_constellation_detail_icon"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/baiyangzuo"
                        tools:ignore="ContentDescription" />
                <com.github.xiaogegechen.library.CornerButton
                        android:id="@+id/module_b_activity_constellation_detail_share_button"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end|center_vertical"
                        app:corner_button_text_size="@dimen/design_text"
                        app:corner_button_text="分享"
                        app:corner_button_text_color="#fff9f9"
                        app:corner_button_icon="@drawable/qq"/>
                <com.github.xiaogegechen.library.CornerButton
                        android:id="@+id/module_b_activity_constellation_detail_change_button"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="110dp"
                        android:padding="2dp"
                        app:corner_button_start_color="#00000000"
                        app:corner_button_end_color="#00000000"
                        app:corner_button_border_color="#e7e8ea"
                        app:corner_button_border_width="1dp"
                        app:corner_button_text_size="@dimen/design_text"
                        app:corner_button_text="白羊座"
                        app:corner_button_text_color="#e7e8ea"
                        app:corner_button_distance="3dp"
                        app:corner_button_icon="@drawable/module_b_change"/>
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>