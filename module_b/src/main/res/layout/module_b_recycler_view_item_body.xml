<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <View
            android:id="@+id/module_b_recycler_view_item_body_placeholder_0"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#00000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/module_b_recycler_view_item_body_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/module_b_recycler_view_item_bg"
            app:layout_constraintTop_toBottomOf="@id/module_b_recycler_view_item_body_placeholder_0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        <TextView
                android:id="@+id/module_b_recycler_view_item_body_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2f1557"
                android:textSize="@dimen/design_main_title"
                android:layout_marginStart="@dimen/design_margin_left"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:text="综合指数"/>
        <RatingBar
                android:id="@+id/module_b_recycler_view_item_body_rate"
                android:layout_marginTop="@dimen/design_margin_top"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                app:layout_constraintLeft_toLeftOf="@id/module_b_recycler_view_item_body_title"
                app:layout_constraintTop_toBottomOf="@id/module_b_recycler_view_item_body_title"
                app:layout_constraintWidth_percent="1"/>
        <ImageView
                android:id="@+id/module_b_recycler_view_item_body_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="@dimen/design_margin_right"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/module_b_recycler_view_item_body_title"
                app:layout_constraintLeft_toRightOf="@id/module_b_recycler_view_item_body_rate"
                app:layout_constraintHorizontal_bias="1"
                tools:src="@drawable/jiankang"
                tools:ignore="ContentDescription"/>
        <TextView
                android:id="@+id/module_b_recycler_view_item_body_sum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/design_sub_title"
                android:textColor="#807098"
                android:paddingBottom="30dp"
                android:layout_marginStart="@dimen/design_margin_left"
                android:layout_marginEnd="@dimen/design_margin_right"
                android:layout_marginTop="@dimen/design_margin_top"
                app:layout_constraintTop_toBottomOf="@id/module_b_recycler_view_item_body_icon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="今日总结"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
            android:id="@+id/module_b_recycler_view_item_body_placeholder_1"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#00000000"
            app:layout_constraintTop_toBottomOf="@id/module_b_recycler_view_item_body_main"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>