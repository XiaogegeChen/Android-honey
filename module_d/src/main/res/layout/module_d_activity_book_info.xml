<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.impl.BookInfoActivity">
    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/module_d_activity_book_info_app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/module_d_activity_book_info_collapsing_tool_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:collapsedTitleTextAppearance="@style/module_d_activity_info_collapsed_title"
                app:expandedTitleTextAppearance="@style/module_d_activity_info_expanded_title"
                app:contentScrim="@color/design_color_accent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:toolbarId="@id/module_d_activity_book_info_tool_bar">
            <ImageView
                    android:id="@+id/module_d_activity_book_info_image"
                    android:background="@color/design_color_white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/module_d_activity_book_info_image_height"
                    tools:src="@drawable/module_d_load_book_failed"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax" />
            <LinearLayout
                    android:id="@+id/module_d_activity_book_info_placeholder_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_collapseMode="pin" >
                <View
                        android:id="@+id/module_d_activity_book_info_placeholder"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_collapseMode="pin" />
                <androidx.appcompat.widget.Toolbar
                        android:id="@+id/module_d_activity_book_info_tool_bar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        app:navigationIcon="@drawable/design_ic_back_white"
                        app:title="@null"
                        app:layout_collapseMode="pin" />
            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/module_d_activity_book_info_image_height"
            android:src="@drawable/module_d_ic_lovely_bear"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/module_d_activity_book_info_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
    </androidx.recyclerview.widget.RecyclerView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>