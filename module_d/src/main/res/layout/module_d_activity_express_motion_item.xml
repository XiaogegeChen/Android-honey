<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_color_white">
    <TextView
            android:id="@+id/module_d_activity_express_motion_item_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/design_text"
            android:textColor="@color/design_color_text_black"
            android:layout_marginRight="@dimen/design_margin_right"
            android:layout_marginLeft="@dimen/design_margin_left"
            android:gravity="end"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/module_d_activity_express_motion_item_split"
            tools:text="10-09"/>
    <TextView
            android:id="@+id/module_d_activity_express_motion_item_time_exactly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/design_small"
            android:textColor="@color/design_color_text_black"
            android:gravity="end"
            app:layout_constraintLeft_toLeftOf="@id/module_d_activity_express_motion_item_time"
            app:layout_constraintRight_toRightOf="@id/module_d_activity_express_motion_item_time"
            app:layout_constraintTop_toBottomOf="@id/module_d_activity_express_motion_item_time"
            tools:text="10:36"/>
    <View
            android:id="@+id/module_d_activity_express_motion_item_split"
            android:layout_width="2dp"
            android:background="@color/module_d_activity_express_item_color_pass"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/module_d_activity_express_motion_item_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.3"/>
    <TextView
            android:id="@+id/module_d_activity_express_motion_item_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/design_text"
            android:textColor="@color/design_color_text_black"
            android:layout_marginLeft="@dimen/design_margin_left"
            android:layout_marginRight="@dimen/design_margin_right"
            android:layout_marginBottom="30dp"
            app:layout_constraintTop_toTopOf="@id/module_d_activity_express_motion_item_time"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/module_d_activity_express_motion_item_split"
            tools:text="【石家庄市】快件已在【长安三部】 签收,签收人: 本人,感谢使用中通快递,期待再次为您服务!"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/module_d_activity_express_motion_item_icon"
            android:layout_width="@dimen/module_d_activity_express_motion_item_icon_size"
            android:layout_height="@dimen/module_d_activity_express_motion_item_icon_size"
            app:layout_constraintLeft_toLeftOf="@id/module_d_activity_express_motion_item_split"
            app:layout_constraintRight_toRightOf="@id/module_d_activity_express_motion_item_split"
            app:layout_constraintTop_toTopOf="@id/module_d_activity_express_motion_item_time"
            tools:src="@drawable/module_d_ic_express_motion_moving"/>
</androidx.constraintlayout.widget.ConstraintLayout>