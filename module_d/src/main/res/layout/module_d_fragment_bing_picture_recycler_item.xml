<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/module_d_fragment_bing_picture_recycler_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/design_sub_title"
        android:textColor="@color/design_color_text_black"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/design_margin_left"
        android:layout_marginTop="@dimen/design_margin_top"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="今日热图"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/module_d_fragment_bing_picture_recycler_item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/design_margin_top"
        android:layout_marginLeft="@dimen/design_margin_left"
        android:layout_marginRight="@dimen/design_margin_right"
        app:layout_constraintTop_toBottomOf="@id/module_d_fragment_bing_picture_recycler_item_title" />
</androidx.constraintlayout.widget.ConstraintLayout>