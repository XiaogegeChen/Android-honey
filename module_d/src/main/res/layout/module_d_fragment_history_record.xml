<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
            android:id="@+id/module_d_fragment_history_record_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/design_sub_title"
            android:textColor="@color/design_color_text_black"
            android:text="@string/module_d_fragment_history_record_search"
            android:layout_marginLeft="@dimen/design_margin_left"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/module_d_fragment_history_record_delete_icon"
            app:layout_constraintBottom_toBottomOf="@id/module_d_fragment_history_record_delete_icon"
            android:textStyle="bold"/>
    <ImageView
            android:id="@+id/module_d_fragment_history_record_delete_icon"
            android:layout_width="@dimen/module_d_fragment_history_record_delete_icon_size"
            android:layout_height="@dimen/module_d_fragment_history_record_delete_icon_size"
            android:src="@drawable/design_ic_delete"
            android:layout_marginTop="@dimen/design_margin_top"
            android:layout_marginRight="@dimen/design_margin_right"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/module_d_fragment_history_record_recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/design_margin_top"
            app:layout_constraintTop_toBottomOf="@id/module_d_fragment_history_record_delete_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>