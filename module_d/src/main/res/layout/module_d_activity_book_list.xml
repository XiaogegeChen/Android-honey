<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2">
    <com.github.xiaogegechen.design.viewgroup.TitleBar
            android:id="@+id/module_d_activity_book_list_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:left_visibility="true"
            app:right_visibility="false"
            app:title_bar_title="@string/module_d_activity_book_list_title_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/module_d_activity_book_list_recycler_view_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/module_d_activity_book_list_title_bar"
            app:layout_constraintWidth_percent="0.2"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/module_d_activity_book_list_recycler_view_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/module_d_activity_book_list_title_bar"
            app:layout_constraintLeft_toRightOf="@id/module_d_activity_book_list_recycler_view_left"
            app:layout_constraintWidth_percent="0.8"/>
</androidx.constraintlayout.widget.ConstraintLayout>