<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/design_margin_self"
    tools:background="@color/module_left_weather_color_primary">
    <TextView
        android:id="@+id/module_left_fragment_weather_detail_hourly_item_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/design_sub_title"
        android:textColor="@color/design_color_text_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="19°"/>
    <ImageView
        android:id="@+id/module_left_fragment_weather_detail_hourly_item_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/design_margin_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/module_left_fragment_weather_detail_hourly_item_temp"
        tools:src="@drawable/module_left_weather_sunshine_night"/>
    <TextView
        android:id="@+id/module_left_fragment_weather_detail_hourly_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/design_margin_top"
        android:textSize="@dimen/design_sub_title"
        android:textColor="@color/design_color_text_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/module_left_fragment_weather_detail_hourly_item_icon"
        tools:text="小雪"/>
    <TextView
        android:id="@+id/module_left_fragment_weather_detail_hourly_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/design_margin_top"
        android:textSize="@dimen/design_sub_title"
        android:textColor="@color/design_color_text_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/module_left_fragment_weather_detail_hourly_item_desc"
        tools:text="22:00"/>
</androidx.constraintlayout.widget.ConstraintLayout>