<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.impl.SelectCityActivity">
    <View
        android:id="@+id/module_left_activity_select_city_placeholder_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/module_left_weather_color_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:id="@+id/module_left_activity_select_city_title_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/design_title_bar_height"
        android:background="@color/module_left_weather_color_primary"
        app:layout_constraintTop_toBottomOf="@id/module_left_activity_select_city_placeholder_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:id="@+id/module_left_activity_select_city_title_back_icon"
        android:layout_width="@dimen/design_icon_common_size"
        android:layout_height="@dimen/design_icon_common_size"
        android:layout_marginLeft="@dimen/design_margin_left"
        android:src="@drawable/design_ic_back_white"
        app:layout_constraintTop_toTopOf="@id/module_left_activity_select_city_title_background"
        app:layout_constraintLeft_toLeftOf="@id/module_left_activity_select_city_title_background"
        app:layout_constraintBottom_toBottomOf="@id/module_left_activity_select_city_title_background"
        android:contentDescription="@null" />
    <View
        android:id="@+id/module_left_activity_select_city_search_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/design_margin_left"
        android:layout_marginRight="@dimen/design_margin_right"
        android:layout_marginTop="@dimen/design_margin_top"
        android:layout_marginBottom="@dimen/design_margin_bottom"
        android:background="@drawable/module_left_activity_select_city_search_bg"
        app:layout_constraintLeft_toRightOf="@id/module_left_activity_select_city_title_back_icon"
        app:layout_constraintTop_toTopOf="@id/module_left_activity_select_city_title_background"
        app:layout_constraintBottom_toBottomOf="@id/module_left_activity_select_city_title_background"
        app:layout_constraintRight_toRightOf="@id/module_left_activity_select_city_title_background"/>
    <ImageView
        android:id="@+id/module_left_activity_select_city_search_icon"
        android:layout_width="@dimen/design_icon_common_size"
        android:layout_height="@dimen/design_icon_common_size"
        android:src="@drawable/design_ic_search"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@id/module_left_activity_select_city_search_background"
        app:layout_constraintTop_toTopOf="@id/module_left_activity_select_city_search_background"
        app:layout_constraintBottom_toBottomOf="@id/module_left_activity_select_city_search_background"
        android:contentDescription="@null" />
    <EditText
        android:id="@+id/module_left_activity_select_city_search_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@null"
        android:textColor="@color/design_color_text_white"
        android:textSize="@dimen/design_sub_title"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:ellipsize="none"
        android:hint="@string/module_left_activity_select_city_input_hint"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@id/module_left_activity_select_city_search_icon"
        app:layout_constraintTop_toTopOf="@id/module_left_activity_select_city_search_icon"
        app:layout_constraintBottom_toBottomOf="@id/module_left_activity_select_city_search_icon"
        app:layout_constraintRight_toRightOf="@id/module_left_activity_select_city_search_background"
        tools:text="郑州"/>
    <TextView
        android:id="@+id/module_left_activity_select_city_top_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/module_left_activity_select_city_top_city"
        android:layout_marginTop="@dimen/design_margin_top"
        android:layout_marginLeft="@dimen/design_margin_left"
        android:textSize="@dimen/design_sub_title"
        android:textColor="@color/design_color_text_black"
        app:layout_constraintTop_toBottomOf="@id/module_left_activity_select_city_title_background"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/module_left_activity_select_city_top_city_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/design_margin_top"
        android:layout_marginLeft="@dimen/design_margin_left"
        android:layout_marginRight="@dimen/design_margin_right"
        app:layout_constraintTop_toBottomOf="@id/module_left_activity_select_city_top_city"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/module_left_activity_select_city_top_city_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="module_left_activity_select_city_top_city,module_left_activity_select_city_top_city_list"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/module_left_activity_select_city_result_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/design_margin_top"
        android:layout_marginLeft="@dimen/design_margin_left"
        android:layout_marginRight="@dimen/design_margin_right"
        app:layout_constraintTop_toBottomOf="@id/module_left_activity_select_city_title_background"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>