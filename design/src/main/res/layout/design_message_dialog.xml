<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/design_bg_message_dialog_shape"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">
    <TextView
            android:id="@+id/design_message_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="@dimen/design_sub_title"
            android:textStyle="bold"
            tools:text="警告"/>
    <TextView
            android:id="@+id/design_message_dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/design_margin_self"
            android:textColor="#000000"
            android:textSize="@dimen/design_text"
            tools:text="重要的详细信息"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/design_margin_top"
            android:background="@color/design_dialog_line" />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/design_message_dialog_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="15dp"
                android:background="@drawable/design_bg_message_dialog_button_selector"
                android:focusable="true"
                android:gravity="center"
                android:textColor="@color/design_dialog_cancel"
                android:textSize="@dimen/design_text"
                tools:text="取消"/>
        <View
                android:id="@+id/v_dialog_message_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/design_dialog_line" />
        <TextView
                android:id="@+id/design_message_dialog_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="15dp"
                android:background="@drawable/design_bg_message_dialog_button_selector"
                android:focusable="true"
                android:gravity="center"
                android:textColor="@color/design_dialog_confirm"
                android:textSize="@dimen/design_text"
                tools:text="确定"/>
    </LinearLayout>
</LinearLayout>