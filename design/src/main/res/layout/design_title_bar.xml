<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/title_bar_root"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/design_color_accent">
    <ImageView
        android:id="@+id/title_bar_left"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/design_ic_back_white"/>
    <TextView
        android:id="@+id/title_bar_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minLines="1"
        android:maxLines="1"
        android:textColor="@color/design_color_text_white"
        android:textSize="@dimen/design_app_bar"
        android:gravity="center"
        android:layout_marginLeft="@dimen/design_margin_left"
        android:layout_marginRight="@dimen/design_margin_right"
        app:layout_constraintLeft_toRightOf="@id/title_bar_left"
        app:layout_constraintRight_toLeftOf="@id/title_bar_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="小哥哥"/>
    <ImageView
        android:id="@+id/title_bar_right"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/design_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
