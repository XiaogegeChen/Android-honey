<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintVertical_bias="1">
    <ImageView
            android:id="@+id/main_activity_menu_item_image"
            android:layout_width="@dimen/main_menu_view_item_image_size"
            android:layout_height="@dimen/main_menu_view_item_image_size"
            android:padding="10dp"
            android:contentDescription="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:src="@drawable/design_ic_add"
            tools:background="@color/main_color_primary" />
    <View
            android:id="@+id/main_activity_menu_item_split"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="@color/main_color_primary_dark"
            app:layout_constraintTop_toTopOf="@id/main_activity_menu_item_image"
            app:layout_constraintBottom_toBottomOf="@id/main_activity_menu_item_image"
            app:layout_constraintLeft_toRightOf="@id/main_activity_menu_item_image"/>
    <TextView
            android:id="@+id/main_activity_menu_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_color_primary"
            android:layout_marginBottom="@dimen/design_margin_bottom"
            android:textSize="@dimen/design_sub_title"
            android:ems="1"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/main_activity_menu_item_image"
            app:layout_constraintLeft_toLeftOf="@id/main_activity_menu_item_image"
            app:layout_constraintRight_toRightOf="@id/main_activity_menu_item_image"
            tools:text="星座"/>
</androidx.constraintlayout.widget.ConstraintLayout>