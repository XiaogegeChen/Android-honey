<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/design_margin_top"
    android:layout_marginBottom="@dimen/design_margin_bottom"
    tools:background="@color/weather_color_primary">
    <View
        android:id="@+id/weather_fragment_weather_detail_lifestyle_item_splitter"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/design_line"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.25"/>
    <ImageView
        android:id="@+id/weather_fragment_weather_detail_lifestyle_item_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/weather_fragment_weather_detail_lifestyle_item_splitter"
        tools:src="@drawable/weather_ic_cw" />
    <TextView
        android:id="@+id/weather_fragment_weather_detail_lifestyle_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/design_text"
        android:textColor="@color/design_color_text_white"
        app:layout_constraintTop_toBottomOf="@id/weather_fragment_weather_detail_lifestyle_item_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/weather_fragment_weather_detail_lifestyle_item_splitter"
        tools:text="洗车指数"/>
    <TextView
        android:id="@+id/weather_fragment_weather_detail_lifestyle_item_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/design_small"
        android:textColor="@color/design_color_text_white"
        app:layout_constraintTop_toBottomOf="@id/weather_fragment_weather_detail_lifestyle_item_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/weather_fragment_weather_detail_lifestyle_item_splitter"
        tools:text="较适宜"/>
    <TextView
        android:id="@+id/weather_fragment_weather_detail_lifestyle_item_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/design_text"
        android:textColor="@color/design_color_text_white"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@id/weather_fragment_weather_detail_lifestyle_item_splitter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="昼夜温差极大，且风力较强，极易发生感冒，请特别注意增减衣服保暖防寒。"/>
</androidx.constraintlayout.widget.ConstraintLayout>