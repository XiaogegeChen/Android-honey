<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/design_margin_top"
    android:background="@color/design_color_white">
    <ImageView
        android:id="@+id/weather_activity_manage_city_item_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@null"
        android:layout_marginLeft="@dimen/design_margin_left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@drawable/weather_ic_na"/>
    <TextView
        android:id="@+id/weather_activity_manage_city_item_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/design_color_text_black"
        android:textSize="@dimen/design_sub_title"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/design_margin_left"
        app:layout_constraintLeft_toRightOf="@id/weather_activity_manage_city_item_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/weather_activity_manage_city_item_weather"
        tools:text="沈阳市"/>
    <TextView
        android:id="@+id/weather_activity_manage_city_item_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/design_text"
        android:textColor="@color/design_color_text_grey"
        app:layout_constraintTop_toBottomOf="@id/weather_activity_manage_city_item_city"
        app:layout_constraintLeft_toLeftOf="@id/weather_activity_manage_city_item_city"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="晴，2C"/>
    <ImageView
        android:id="@+id/weather_activity_manage_city_item_delete"
        android:layout_width="@dimen/design_icon_common_size"
        android:layout_height="@dimen/design_icon_common_size"
        android:src="@drawable/design_ic_delete"
        android:layout_marginRight="@dimen/design_margin_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:contentDescription="@null" />
    <View
        android:id="@+id/weather_activity_manage_city_item_splitter"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/design_line"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>