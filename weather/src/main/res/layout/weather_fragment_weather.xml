<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weather_color_primary">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/weather_activity_weather_background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:background="@color/weather_color_primary"/>
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/weather_color_primary">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <com.github.xiaogegechen.design.viewgroup.PlaceholderToolBar
                    android:id="@+id/toolBar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginTop="@dimen/weather_title_height"
                    android:clickable="false"
                    app:layout_collapseMode="pin"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="none">
                    <com.github.xiaogegechen.design.viewgroup.BannerView
                        android:id="@+id/bannerView"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:bv_arc_height="@dimen/weather_banner_arc_height"
                        app:bv_indicator_gravity="end|bottom"
                        app:bv_indicator_margin_right="@dimen/design_margin_right"
                        app:bv_indicator_margin_bottom="@dimen/weather_banner_indicator_margin_bottom"
                        app:bv_indicator_size="@dimen/weather_banner_indicator_size"
                        app:bv_indicator_gap="@dimen/weather_banner_indicator_gap"
                        app:bv_indicator_selected_color="@color/weather_color_primary"
                        app:bv_indicator_color="@color/design_color_grey"
                        app:bv_bottom_color="@color/weather_color_primary"/>
                    <View
                        android:id="@+id/helpLine"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:layout_constraintTop_toTopOf="@id/bannerView"
                        android:layout_marginTop="200dp"/>
                    <FrameLayout
                        android:id="@+id/bannerRvBg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/weather_tab_bg"
                        android:layout_marginLeft="@dimen/design_margin_left"
                        android:layout_marginRight="@dimen/design_margin_right"
                        app:layout_constraintTop_toBottomOf="@id/helpLine">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/bannerRv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center" />
                    </FrameLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/selectedCityRv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/design_margin_top"
                        android:background="@color/design_color_white"
                        android:orientation="horizontal"
                        android:translationZ="@dimen/weather_title_Z"
                        app:layout_constraintTop_toBottomOf="@id/bannerRvBg"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/weather_activity_weather_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationZ="@dimen/weather_title_Z">
        <View
            android:id="@+id/titleLayoutBg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/design_color_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:alpha="0"/>
        <View
            android:id="@+id/weather_activity_weather_placeholder_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/weather_title_height"
            app:layout_constraintTop_toBottomOf="@id/weather_activity_weather_placeholder_view">
            <com.github.xiaogegechen.design.view.ClickableTextView
                android:id="@+id/manageCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weather_manage"
                android:textSize="@dimen/design_middle"
                android:textColor="@color/design_color_text_black"
                android:layout_marginLeft="@dimen/design_margin_left"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:ct_text_color_after="@color/design_color_text_grey"/>
            <com.github.xiaogegechen.design.view.ClickableTextView
                android:id="@+id/weather_activity_weather_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weather_setting"
                android:textSize="@dimen/design_middle"
                android:textColor="@color/design_color_text_black"
                android:layout_marginRight="@dimen/design_margin_right"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:ct_text_color_after="@color/design_color_text_grey"/>
            <View
                android:id="@+id/searchBg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/design_margin_left"
                android:layout_marginRight="@dimen/design_margin_right"
                android:layout_marginTop="@dimen/design_margin_top"
                android:layout_marginBottom="@dimen/design_margin_bottom"
                android:background="@drawable/weather_activity_select_city_search_bg"
                app:layout_constraintLeft_toRightOf="@id/manageCity"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/weather_activity_weather_setting"/>
            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="@dimen/design_icon_common_size"
                android:layout_height="@dimen/design_icon_common_size"
                android:src="@drawable/design_ic_search"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="@id/searchBg"
                app:layout_constraintTop_toTopOf="@id/searchBg"
                app:layout_constraintBottom_toBottomOf="@id/searchBg"
                android:contentDescription="@null" />
            <com.github.xiaogegechen.design.view.BannerTextView
                android:id="@+id/hotCity"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/design_margin_left"
                android:layout_marginRight="@dimen/design_margin_right"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintLeft_toRightOf="@id/searchIcon"
                app:layout_constraintTop_toTopOf="@id/searchBg"
                app:layout_constraintBottom_toBottomOf="@id/searchBg"
                app:layout_constraintRight_toRightOf="@id/searchBg"
                app:btv_ellipsize="end"
                app:btv_gravity="center_vertical"
                app:btv_textSize="@dimen/design_sub_title"
                app:btv_textColor="@color/design_color_text_grey"
                app:btv_maxLines="1"
                app:btv_minLines="1"/>
            <androidx.constraintlayout.widget.Group
                android:id="@+id/searchGroup"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:constraint_referenced_ids="searchBg,searchIcon,hotCity"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>

