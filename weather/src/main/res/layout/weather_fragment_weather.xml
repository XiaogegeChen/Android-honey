<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/weather_activity_weather_background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:background="@color/weather_color_primary"/>
    <View
        android:id="@+id/weather_activity_weather_placeholder_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/weather_color_primary"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/weather_activity_weather_debug"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/weather_activity_weather_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/weather_activity_weather_placeholder_view">
        <ImageView
            android:id="@+id/weather_activity_weather_add"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/design_ic_add"
            android:layout_marginLeft="@dimen/design_margin_left"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@null" />
        <TextView
            android:id="@+id/weather_activity_weather_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/design_main_title"
            android:textColor="@color/design_color_text_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="北京市"/>
        <TextView
            android:id="@+id/weather_activity_weather_refresh_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/design_main_title"
            android:textColor="@color/design_color_text_white"
            android:layout_marginRight="@dimen/design_margin_right"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="13:51"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/weather_activity_weather_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/design_margin_top"
        app:layout_constraintTop_toBottomOf="@id/weather_activity_weather_title"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>