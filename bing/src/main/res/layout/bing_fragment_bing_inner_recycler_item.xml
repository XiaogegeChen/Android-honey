<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/design_margin_self">
    <com.github.xiaogegechen.design.view.CornerImageView
        android:id="@+id/bing_fragment_bing_inner_recycler_item_image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/bing_module_image_height"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:minWidth="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:corner_image_left_top="@dimen/bing_module_image_corner"
        app:corner_image_left_bottom="@dimen/bing_module_image_corner"
        app:corner_image_right_top="@dimen/bing_module_image_corner"
        app:corner_image_right_bottom="@dimen/bing_module_image_corner"
        tools:src="@drawable/design_test" />
    <TextView
        android:id="@+id/bing_fragment_bing_inner_recycler_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/design_color_text_white"
        android:textSize="@dimen/design_text"
        android:gravity="center"
        android:paddingBottom="@dimen/design_margin_bottom"
        android:paddingTop="@dimen/design_margin_top"
        android:maxLines="1"
        android:ellipsize="end"
        android:background="@drawable/bing_topic_title_bg"
        app:layout_constraintBottom_toBottomOf="@id/bing_fragment_bing_inner_recycler_item_image"
        app:layout_constraintLeft_toLeftOf="@id/bing_fragment_bing_inner_recycler_item_image"
        app:layout_constraintRight_toRightOf="@id/bing_fragment_bing_inner_recycler_item_image"
        tools:text="张一山"/>
</androidx.constraintlayout.widget.ConstraintLayout>