<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_color_black"
    tools:context=".view.impl.BigPicActivity">
    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/big_pic_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:src="@drawable/design_test"/>
    <ProgressBar
        android:id="@+id/big_pic_loading"
        android:layout_width="@dimen/bing_big_pic_progress_size"
        android:layout_height="@dimen/bing_big_pic_progress_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:indeterminateTint="@color/bing_color_primary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:id="@+id/big_pic_vh"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/design_transparent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.github.xiaogegechen.design.viewgroup.TitleBar
        android:id="@+id/big_pic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_bar_bg_color="@color/design_transparent"
        app:left_visibility="true"
        app:layout_constraintTop_toBottomOf="@id/big_pic_vh"/>
    <TextView
        android:id="@+id/big_pic_view_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bing_big_pic_view_origin"
        android:textSize="@dimen/design_text"
        android:textColor="@color/design_color_white"
        android:layout_marginBottom="@dimen/design_margin_bottom"
        android:background="@drawable/bing_big_pic_view_origin_bg"
        android:padding="@dimen/design_margin_self"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/big_pic_down"
        android:layout_width="@dimen/bing_big_pic_download_size"
        android:layout_height="@dimen/bing_big_pic_download_size"
        android:src="@drawable/design_ic_download"
        android:layout_marginRight="@dimen/design_margin_right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/big_pic_view_origin"
        app:layout_constraintTop_toTopOf="@id/big_pic_view_origin" />
    <ImageView
        android:id="@+id/big_pic_share"
        android:layout_width="@dimen/bing_big_pic_download_size"
        android:layout_height="@dimen/bing_big_pic_download_size"
        android:src="@drawable/design_ic_share"
        android:layout_marginLeft="@dimen/design_margin_left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/big_pic_view_origin"
        app:layout_constraintTop_toTopOf="@id/big_pic_view_origin" />
</androidx.constraintlayout.widget.ConstraintLayout>