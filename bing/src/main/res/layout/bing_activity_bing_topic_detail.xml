<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.impl.BingTopicDetailActivity">
    <View
        android:id="@+id/bing_activity_bing_topic_detail_placeholder"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/bing_gradient_primary"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/bing_activity_bing_topic_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toBottomOf="@id/bing_activity_bing_topic_detail_placeholder"
        android:background="@drawable/bing_gradient_primary"
        app:navigationIcon="@drawable/design_ic_back_white"
        app:titleTextColor="@color/design_color_text_white" />
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/bing_activity_bing_topic_detail_refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/bing_activity_bing_topic_detail_toolbar"
        app:layout_constraintBottom_toBottomOf="parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/bing_activity_bing_topic_detail_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f2f2f2" />
            <include
                android:id="@+id/bing_activity_bing_topic_detail_error"
                layout="@layout/bing_error_page"/>
        </FrameLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>